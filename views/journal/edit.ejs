<%- include("../partials/header") -%>


<div style="width: 30%; margin:30px auto">

<h4>Edit Journal</h4>    

<form action="/user/<%= user_id %>/journal/<%= journal._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <textarea class="form-control" type="text" name="journal[text]" value="<%= journal.text %>"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
    </div>
</form>

</div>

