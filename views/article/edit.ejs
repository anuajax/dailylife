<%- include("../partials/header") -%>


<div style="width: 30%; margin:30px auto">

<h4>Edit Article</h4>    

<form action="/user/<%= user_id %>/article/<%= article._id %>?_method=PUT" method="POST">
    <div class="form-group">
		<input class="form-control" type="text" name="article[title]" value="<%= article.title %>">
	</div>
    <div class="form-group">
		<input class="form-control" type="text" name="article[image]" value="<%= article.image %>">
	</div>
    <div class="form-group">
		<input class="form-control" type="text" name="article[text]" value="<%= article.text %>">
	</div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
    </div>
</form>

</div>

<%- include("../partials/footer") -%>