<%- include("../partials/header") -%>

<div style="width: 30%; margin:30px auto">


<h4>Add New Article for <%= user.username %></h4>

<form action="/user/<%= user._id %>/article" method="POST">
    <div class="form-group">
		<input class="form-control" type="text" name="articleTitle" placeholder="Add Title">
	</div>
    <div class="form-group">
		<input class="form-control" type="text" name="articleImage" placeholder="Add Image">
	</div>
    <div class="form-group">
		<textarea class="form-control" type="text" name="articleText" placeholder="Add Article"></textarea>
	</div>
	<div class="form-group">
		<button class="btn btn-lg btn-primary btn-block">Submit!</button>
	</div>
</form>

</div>

<%- include("../partials/footer") -%>